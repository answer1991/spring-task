<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- Annotation injection is performed before XML injection -->
	<!-- 要使用注解，必须加上这个标签 -->
	<context:annotation-config />
	<context:component-scan base-package="com.answer1991.**" />

	<!-- 用Ant EL表达式的方式将Bean里面的value替换掉 -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
			</list>
		</property>
		<!-- 这里的优先级低于外部的 -->
		<property name="properties">
			<value></value>
		</property>
	</bean>

	<bean id="executor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="5" />
		<property name="maxPoolSize" value="10" />
		<property name="queueCapacity" value="25" />
	</bean>

	<bean class="com.answer1991.spring.task.TaskSimpleExample">
		<property name="msg" value="hello, Spring task"></property>
	</bean>

	<bean id="schedulingExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
		<property name="poolSize" value="5" />
	</bean>
</beans>